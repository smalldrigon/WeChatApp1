/* pages/mainpage/mainpage.wxss */

.intro {
  margin: 30px;
  text-align: center;
}

.titlecontainer {
  display: flex;
  height: 14%;
  width: 100%;
  justify-content: space-between;
  background-color: #f0f0f0;
  align-items: center;
}

.titleitem1 {
  display: flex;
  color: #dd3e34;
  margin-left: 10px;
  font-size: 35rpx;
  padding: 3%;
}

.titleitem2 {
  justify-content: flex-end;
  padding: 3%;
  margin-right: 10px;
  color: #2573b8;
  font-size: 20rpx;
}

.listimageitemcontainer {
  margin-top: 3rpx;
  position: relative;
  width: 100%;
  height: 100%;
  flex-direction: row;
  background-size: contain;
  background-repeat: no-repeat;
}

.listsupportview {
  position: absolute;
  right: 16rpx;
  top: 30rpx;
  padding: 6rpx;
  background-color: black;
  color: white;
  align-items: flex-end;
  opacity: 0.5;
}

.time {
  margin: 20rpx;
  font-size: 28rpx;
  color: #808080;
}

.goods {
  margin: 20rpx;
  font-size: 32rpx;
}
.divilerline{
  width: 100%;
  height: 5rpx;
  background-color: #d8d8d8;
}.divilerlinebottom{
  width: 100%;
  height: 15rpx;
  background-color: #f0f0f0;
}